@model WebGiayOnline.Models.Giay
@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // Sửa lại layout nếu cần
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-body">
            <h3 class="text-danger fw-bold mb-3">
                <i class="fas fa-trash-alt me-2"></i> Xác nhận xóa sản phẩm
            </h3>

            <div class="row mb-4">
                <div class="col-md-4">
                    @{
                        var img = Model.ProductImages?.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png";
                    }
                    <img src="@img" alt="@Model.Name" class="img-fluid rounded border" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Tên sản phẩm:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Giá:</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C0")</dd>

                        <dt class="col-sm-4">Màu sắc:</dt>
                        <dd class="col-sm-8">@Model.Color</dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="GiayId" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xóa sản phẩm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
