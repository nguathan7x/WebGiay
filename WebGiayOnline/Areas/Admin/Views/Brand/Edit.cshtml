@model WebGiayOnline.Models.Brand

@{
    ViewData["Title"] = "Chỉnh sửa thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // hoặc _Layout2.cshtml nếu bạn dùng layout khác
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="text-primary fw-bold mb-4">
                <i class="fas fa-edit me-2"></i> Chỉnh sửa thương hiệu
            </h3>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="BrandId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Tên thương hiệu</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên thương hiệu" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả thương hiệu (nếu có)"></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
