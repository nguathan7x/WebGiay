@model WebGiayOnline.Models.Brand

@{
    ViewData["Title"] = "Xác nhận xóa thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // hoặc _Layout2.cshtml nếu bạn dùng layout khác
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-body">
            <h3 class="text-danger fw-bold mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i> Xác nhận xóa thương hiệu
            </h3>

            <div class="mb-3">
                <p>Bạn có chắc chắn muốn xóa thương hiệu sau?</p>
                <ul class="list-unstyled">
                    <li><strong>Tên thương hiệu:</strong> @Model.Name</li>
                    <li><strong>Mô tả:</strong> @Model.Description</li>
                </ul>
            </div>

            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" name="id" value="@Model.BrandId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Hủy bỏ
                </a>
            </form>
        </div>
    </div>
</div>
