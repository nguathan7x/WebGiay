@model WebGiayOnline.Models.Brand

@{
    ViewData["Title"] = "Tạo thương hiệu mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // hoặc _Layout2.cshtml nếu bạn đang dùng layout khác
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="text-primary fw-bold mb-4">
                <i class="fas fa-plus-circle me-2"></i> Thêm thương hiệu mới
            </h3>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Tên thương hiệu</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Nhập tên thương hiệu" required />
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Mô tả</label>
                    <textarea class="form-control" id="Description" name="Description" rows="4" placeholder="Mô tả thương hiệu (nếu có)"></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
