@model WebGiayOnline.Models.ProductGroup

@{
    ViewData["Title"] = "Thêm nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // điều chỉnh nếu bạn dùng layout khác
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="text-primary fw-bold mb-4">
                <i class="fas fa-layer-group me-2"></i> Thêm nhóm sản phẩm mới
            </h3>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="GroupName" class="form-label">Tên nhóm sản phẩm</label>
                    <input asp-for="GroupName" class="form-control" placeholder="Nhập tên nhóm sản phẩm" required />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
