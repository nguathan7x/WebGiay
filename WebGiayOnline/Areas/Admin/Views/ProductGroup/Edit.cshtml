@model WebGiayOnline.Models.ProductGroup

@{
    ViewData["Title"] = "Sửa nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // hoặc layout phù hợp
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="text-primary fw-bold mb-4">
                <i class="fas fa-edit me-2"></i> Sửa nhóm sản phẩm
            </h3>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="ProductGroupId" />

                <div class="mb-3">
                    <label asp-for="GroupName" class="form-label"></label>
                    <input asp-for="GroupName" class="form-control" placeholder="Nhập tên nhóm sản phẩm" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
