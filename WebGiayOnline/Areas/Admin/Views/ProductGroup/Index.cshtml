@model IEnumerable<WebGiayOnline.Models.ProductGroup>

@{
    ViewData["Title"] = "Danh sách nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // điều chỉnh theo layout bạn đang dùng
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary fw-bold mb-0">
            <i class="fas fa-layer-group me-2"></i> Danh sách nhóm sản phẩm
        </h3>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Thêm nhóm mới
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Tên nhóm</th>
                        <th scope="col">Số biến thể</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-3">
                                <i class="fas fa-box-open me-1"></i> Không có nhóm sản phẩm nào.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var group in Model)
                        {
                            <tr>
                                <td>@group.GroupName</td>
                                <td>@(group.Variants?.Count ?? 0)</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@group.ProductGroupId" class="btn btn-info btn-sm me-1">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@group.ProductGroupId" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@group.ProductGroupId" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa nhóm này không?');">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
