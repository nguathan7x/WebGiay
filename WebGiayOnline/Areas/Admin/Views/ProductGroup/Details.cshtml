@model WebGiayOnline.Models.ProductGroup

@{
    ViewData["Title"] = $"Nhóm sản phẩm: {Model.GroupName}";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // hoặc layout bạn đang sử dụng
}

<div class="container mt-4">
    <h3 class="fw-bold text-primary mb-4">
        <i class="fas fa-layer-group me-2"></i> Nhóm sản phẩm: @Model.GroupName
    </h3>

    @if (Model.Variants != null && Model.Variants.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var variant in Model.Variants)
            {
                var imgUrl = variant.ProductImages?.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png";

                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@imgUrl" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="@variant.Name" />
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@variant.Name</h5>
                            <p class="mb-1"><strong>Màu:</strong> <span style="color:@variant.Color">@variant.Color</span></p>
                            <p class="mb-3"><strong>Giá:</strong> @variant.Price.ToString("N0") đ</p>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@variant.GiayId" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-eye me-1"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            <i class="fas fa-exclamation-circle me-2"></i> Nhóm hiện chưa có biến thể nào.
        </div>
    }
</div>
