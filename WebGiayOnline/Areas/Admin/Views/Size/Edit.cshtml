@model WebGiayOnline.Models.Size

@{
    ViewData["Title"] = "Chỉnh sửa kích cỡ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // layout admin bạn đang dùng
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="text-primary fw-bold mb-4">
                <i class="fas fa-edit me-2"></i> Chỉnh sửa kích cỡ
            </h3>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="SizeId" />

                <div class="mb-3">
                    <label asp-for="Label" class="form-label">Tên kích cỡ</label>
                    <input asp-for="Label" class="form-control" placeholder="Nhập tên kích cỡ" />
                    <span asp-validation-for="Label" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
