@model WebGiayOnline.Models.Size

@{
    ViewData["Title"] = "Xóa kích cỡ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // Layout admin của bạn
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="text-danger fw-bold mb-3">
                <i class="fas fa-trash-alt me-2"></i> Xác nhận xóa kích cỡ
            </h3>

            <p class="fs-5">
                Bạn có chắc chắn muốn xóa kích cỡ:
                <strong class="text-dark">@Model.Label</strong>?
            </p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="SizeId" />
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-check me-1"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
