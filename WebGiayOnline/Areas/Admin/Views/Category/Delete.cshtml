@model WebGiayOnline.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // sửa theo layout thực tế của bạn
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-body">
            <h3 class="text-danger fw-bold mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i> Xác nhận xóa danh mục
            </h3>

            <div class="mb-4">
                <dl class="row">
                    <dt class="col-sm-3">Tên danh mục:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Mô tả:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.CategoryId" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
