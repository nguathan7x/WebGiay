@model IEnumerable<WebGiayOnline.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // điều chỉnh nếu cần
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="fas fa-list-alt me-2"></i> Danh sách danh mục
        </h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus me-1"></i> Thêm danh mục mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">Tên danh mục</th>
                    <th scope="col">Mô tả</th>
                    <th scope="col" class="text-center" style="width: 180px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@category.CategoryId">
                                <i class="fas fa-edit me-1"></i> Sửa
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">
                                <i class="fas fa-trash-alt me-1"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
}
