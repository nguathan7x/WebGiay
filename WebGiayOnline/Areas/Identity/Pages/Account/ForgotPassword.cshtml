@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fff;
            color: #000;
                margin: 0;
            padding: 0;
        }

        .forgot-container {
            max-width: 500px;
            margin: 100px auto;
            background-color: #f9f9f9;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        }

        h1, h2 {
            text-align: center;
            margin-bottom: 10px;
        }

        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 30px;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 14px;
            font-size: 1rem;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .form-label {
            display: block;
            margin-bottom: 6px;
            font-weight: 500;
        }

        .btn-black {
            background-color: #000;
            color: #fff;
            padding: 12px;
            width: 100%;
            font-size: 1rem;
            border: none;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

            .btn-black:hover {     background-color: #333;
            }

        .text-danger {
            color: #d8000c;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <h1>@ViewData["Title"]</h1>
        <h2>Enter your email to reset your password</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-black">Send Reset Link</button>
        </form>
    </div>

    @section Scripts {
            <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
