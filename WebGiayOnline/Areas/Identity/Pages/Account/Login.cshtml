@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
    // Layout = "_Layout"; // or set to null for a standalone layout
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fff;
        color: #000;
    }

    .login-container {
        max-width: 450px;
        margin: 80px auto;
        padding: 30px;
        background: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }

    h1 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .form-floating {
        margin-bottom: 20px;
    }    .form-control {
        border-radius: 8px;
        padding: 14px;
        font-size: 1rem;
    }

    .btn-black {
        background-color: #000;
        color: #fff;
        padding: 12px;
        font-size: 1rem;
        width: 100%;
        border: none;
        border-radius: 8px;
        transition: background 0.3s ease;
    }

    .btn-black:hover {
        background-color: #333;
    }

    .form-links {
        margin-top: 20px;
        text-align: center;
    }

    .form-links a {
        color: #000;
        text-decoration: underline;
        margin: 0 5px;
    }

    .external-logins button {
        background-color: #000;
        color: #fff;
        margin: 6px 0;
        border-radius: 8px;
        width: 100%;
        padding: 10px;
        border: none;
        transition: background 0.3s ease;
    }

    .external-logins button:hover {
        background-color: #333;
    }

    .text-danger {
        color: #d8000c;
    }
</style>

<div class="login-container">
    <h1>@ViewData["Title"]</h1>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" placeholder="password" autocomplete="current-password" aria-required="true" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="btn-black">Log In</button>

        <div class="form-links">
            <p><a asp-page="./ForgotPassword">Forgot your password?</a></p>
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a new account</a></p>
            <p><a asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
        </div>
    </form>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <hr />
        <div class="external-logins">
            <p style="text-align:center; font-weight: 600;">Log in with another account</p>
            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" name="provider" value="@provider.Name" title="Log in using @provider.DisplayName">
                        @provider.DisplayName
                    </button>
                }
            </form>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}