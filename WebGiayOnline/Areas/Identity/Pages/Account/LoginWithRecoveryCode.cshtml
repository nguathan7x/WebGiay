@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Log In with Recovery Code";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fff;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .recovery-container {
            max-width: 500px;
            margin: 100px auto;
            background-color: #f9f9f9;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        }

        h1 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        p {
            text-align: center;
            font-size: 1.1rem;
            color: #444;
            margin-bottom: 30px;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 14px;
            font-size: 1rem;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .btn-black {
            background-color: #000;
            color: #fff;
            padding: 12px;
            width: 100%;
            font-size: 1rem;
            border: none;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

            .btn-black:hover {
                background-color: #333;
            }

        .text-danger {
            color: #d8000c;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="recovery-container">
        <h1>@ViewData["Title"]</h1>
        <p>
            You are logging in with a <strong>recovery code</strong>. This login will not be remembered
            unless you log in with an authenticator app or disable 2FA and log in again.
        </p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating">
                <label asp-for="Input.RecoveryCode">Recovery Code</label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Enter recovery code" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-black">Log In</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>