@model WebGiayOnline.Models.Brand
@{
    var isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";
    Layout = isAjax ? null : "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit Brand</h2>

<form asp-action="Edit" asp-controller="Brand" method="post">
@* <form asp-action="Edit"> *@
    <input type="hidden" asp-for="BrandId" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
