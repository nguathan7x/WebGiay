@model WebGiayOnline.ViewModels.ProductCreateViewModel

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Giay.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Giay.Price" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Color</label>
        <input asp-for="Giay.Color" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <input asp-for="Giay.Gender" class="form-control" />
    </div>
<select asp-for="Giay.BrandId" class="form-control">
    <option value="">--Select Brand--</option>
    @foreach (var brand in ViewData["Brands"] as SelectList)
    {
        <option value="@brand.Value" >@brand.Text</option>
    }
</select>


    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="Giay.CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Giay.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Details</label>
        <textarea asp-for="Giay.Content" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Upload Multiple Images</label>
        <input type="file" name="ImageFiles" multiple class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
