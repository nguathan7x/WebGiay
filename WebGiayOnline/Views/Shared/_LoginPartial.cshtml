@using Microsoft.AspNetCore.Identity
@using WebGiayOnline.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var userName = user?.FullName ?? user?.UserName ?? "User";
    var avatarUrl = user?.AvatarUrl ?? "https://i.pravatar.cc/40?u=" + userName;

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="@avatarUrl" alt="avatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
            <span class="fw-semibold">@userName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
            <li>
                <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person me-2"></i> Profile
                </a>
            </li>
            <li>
                <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Email">
                    <i class="bi bi-envelope-at me-2"></i> Email
                </a>
            </li>
            <li>
                <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                    <i class="bi bi-key me-2"></i> Change Password
                </a>
            </li>
            <li>
                <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/PersonalData">
                    <i class="bi bi-person-vcard me-2"></i> Personal Data
                </a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                    <button type="submit" class="dropdown-item d-flex align-items-center text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </form>
            </li>
        </ul>

       @*  <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">👤 Profile</a></li>
            <li><hr class="dropdown-divider" /></li>
             <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Email">👤 Email</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">👤 ChangePassword</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/PersonalData">👤 PersonalData</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                    <button type="submit" class="dropdown-item text-danger">🚪 Logout</button>
                </form>
            </li>
        </ul> *@
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

