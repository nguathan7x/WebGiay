@model DiscountCreateViewModel

@{
    ViewData["Title"] = "Chỉnh sửa giảm giá";

    var isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";
    Layout = isAjax ? null : "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa giảm giá</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@ViewBag.DiscountId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Percentage"></label>
        <input asp-for="Percentage" class="form-control" />
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Trạng thái</label><br />
        <input asp-for="IsActive" type="checkbox" /> Kích hoạt
    </div>

    <div class="form-group">
        <label>Chọn giày áp dụng:</label>
        @foreach (var giay in Model.AllGiays)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedGiayIds" value="@giay.GiayId"
                @(Model.SelectedGiayIds.Contains(giay.GiayId) ? "checked" : "") />
                <label class="form-check-label">@giay.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
