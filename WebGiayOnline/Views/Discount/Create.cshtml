@model DiscountCreateViewModel
@{

    var isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";
    Layout = isAjax ? null : "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tên chương trình</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Phần trăm giảm (%)</label>
        <input asp-for="Percentage" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày bắt đầu</label>
        <input asp-for="StartDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày kết thúc</label>
        <input asp-for="EndDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <input asp-for="IsActive" type="checkbox" />
    </div>

    <div class="form-group">
        <label>Chọn các sản phẩm áp dụng:</label>
        <div>
            @foreach (var giay in Model.AllGiays)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedGiayIds"
                           value="@giay.GiayId"
                           id="giay_@giay.GiayId" />
                    <label class="form-check-label" for="giay_@giay.GiayId">
                        @giay.Name
                    </label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success">Tạo giảm giá</button>
</form>
