@model WebGiayOnline.Models.Discount

@{
    ViewData["Title"] = "Xóa giảm giá";

    var isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";
    Layout = isAjax ? null : "~/Views/Shared/_Layout.cshtml";
}

<h2>Bạn có chắc muốn xóa giảm giá này?</h2>

<div>
    <h4>Thông tin giảm giá</h4>
    <dl class="row">
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Phần trăm</dt>
        <dd class="col-sm-10">@Model.Percentage %</dd>

        <dt class="col-sm-2">Thời gian</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DiscountId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
