@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = @Localizer["3G3 - Go beyond limits, define your own style!"];
    Layout = null;
}

@* @Localizer["AboutUs"] *@


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap + Google Fonts + Custom CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;600&family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
        }

        .navbar-brand img {
            height: 40px;
        }

        .hero-section {
            padding: 60px 0;
        }

            .hero-section h2 {
                font-family: 'Oswald', sans-serif;
                font-size: 2.5rem;
                margin-bottom: 20px;
            }

            .hero-section ul li {
                margin-bottom: 10px;
            }

        .btn-dark, .btn-outline-dark {
            min-width: 120px;
        }

        .dot {
            height: 10px;
            width: 10px;
            margin: 0 5px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
        }

            .dot.active {
                background-color: #000;
            }

        footer {
            background-color: #000;
            color: #fff;
            padding: 30px 0;
        }

            footer a {
                color: #ccc;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4 py-3">
        <a class="navbar-brand" href="/">
            <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg" alt="Logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto ms-4">
                <li class="nav-item"><a class="nav-link fw-bold text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">New & Featured</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Men</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Women</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Kids</a></li>
                <li class="nav-item"><a class="nav-link text-danger fw-semibold" href="#">Sale</a></li>

             
                @{
                    var cultureFeature = HttpContextAccessor.HttpContext?.Features.Get<IRequestCultureFeature>();
                    var currentCulture = cultureFeature?.RequestCulture.Culture.Name ?? "vi-VN";
                }

                <form asp-controller="Language" asp-action="SetLanguage" method="post" class="d-flex align-items-center">
                    <select name="culture" class="form-select form-select-sm" onchange="this.form.submit();">
                        <option value="vi-VN" selected="@(currentCulture == "vi-VN" ? "selected" : null)">🇻🇳 Tiếng Việt</option>
                        <option value="en-US" selected="@(currentCulture == "en-US" ? "selected" : null)">🇺🇸 English</option>
                    </select>
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                </form>
     
            </ul>
            <div class="d-flex align-items-center gap-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="me-2 text-dark">👋 @User.Identity.Name</span>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="mb-0">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <button class="btn btn-outline-dark" onclick="location.href='@Url.Page("/Account/Login", new { area = "Identity" })'">Login</button>
                    <button class="btn btn-dark" onclick="location.href='@Url.Page("/Account/Register", new { area = "Identity" })'">Join Now</button>
                }
            </div>

          @*   <div class="d-flex gap-2">
                <button class="btn btn-outline-dark" onclick="location.href='@Url.Page("/Account/Login", new { area = "Identity" })'">Login</button>
                <button class="btn btn-dark" onclick="location.href='@Url.Page("/Account/Register", new { area = "Identity" })'">Join Now</button>
            </div> *@
        </div>
    </nav>
    <!-- Hero / About Section -->
    <section class="container hero-section">
        <div class="row align-items-center">
            <div class="col-md-6">
                <p class="text-uppercase text-muted small">@Localizer["About 3G3"]</p> 
                <h2>@Localizer["Step Up Your Vibe – Walk with 3G3"]</h2>
                <p class="lead fw-semibold">@Localizer["Go beyond limits – define your own style."]</p>
                <ul class="list-unstyled">
                    <li>✔️ @Localizer["Modern design blending soft pastel and bold streetwear."]</li>
                    <li>✔️ @Localizer["Founded by students with a real-world fashion passion."]</li>
                    <li>✔️ @Localizer["Ultra-comfortable, lightweight, and stylish sneakers."]</li>
                </ul>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/3G3Shoes.png" class="img-fluid rounded-3 shadow" alt="3G3 Sneaker">
            </div>
        </div>
    </section>


    <!-- Pagination Dots -->
    <div class="text-center mb-5">
        <span class="dot active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>

    <!-- Footer -->
    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-2">© 2025 3G3 Sneaker Studio - All rights reserved.</p>
            <div>
                <a href="#">Privacy Policy</a> ·
                <a href="#">Terms of Use</a> ·
                <a href="#">Contact Us</a>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
